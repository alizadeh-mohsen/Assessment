@model Assessment.Application.ViewModels.WorkingDaysViewModel

<h2>Calculate Working Days</h2>
<div class="row">
    <div class="col-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" />
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Calculate</button>
            </div>
        </form>

        @if (Model.WorkingDays.HasValue)
        {
            <div class="alert alert-info mt-3">
                Working days between @Model.StartDate.ToShortDateString() and @Model.EndDate.ToShortDateString():
                <strong>@Model.WorkingDays.Value</strong>
            </div>
        }
    </div>
</div>